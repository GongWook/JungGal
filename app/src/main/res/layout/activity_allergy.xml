<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:fontFamily="@font/namugodikl"
    tools:context=".AllergyActivity">

    <LinearLayout
        android:layout_width="417dp"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_margin="12dp"
            android:src="@drawable/back_icon" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="197dp"
            android:layout_height="32dp"
            android:layout_marginLeft="53.5dp"
            android:layout_marginRight="53.5dp"
            android:text="식품 알레르기 표시"
            android:textColor="#000000"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <CheckBox
            android:id="@+id/cb_egg"
            android:layout_width="match_parent"
            android:layout_height="83dp"

            android:drawableLeft="@drawable/hen_custom"
            android:drawablePadding="50dip"
            android:paddingLeft="50dip"
            android:text="계란"
            android:textSize="24sp" />

        <View
            android:id="@+id/r_line"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="#808080" />

        <CheckBox
            android:id="@+id/cb_milk"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:drawableLeft="@drawable/westfood_custom"
            android:drawablePadding="50dip"
            android:paddingLeft="50dip"
            android:text="유제품"
            android:textSize="24sp" />

        <View
            android:id="@+id/r_line2"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="#808080" />

        <CheckBox
            android:id="@+id/ck_meal"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:drawableLeft="@drawable/koreanfood_custom"
            android:drawablePadding="50dip"
            android:paddingLeft="50dip"
            android:text="밀가루"
            android:textSize="24sp" />

        <View
            android:id="@+id/r_line3"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="#808080" />

        <CheckBox
            android:id="@+id/ch_shrimp"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:drawableLeft="@drawable/japanfood_custom"
            android:drawablePadding="50dip"
            android:paddingLeft="50dip"
            android:text="갑각류"
            android:textSize="24sp" />

        <View
            android:id="@+id/r_line4"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="#808080" />

        <CheckBox
            android:id="@+id/ck_nut"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:drawableLeft="@drawable/snackfood_custom"
            android:drawablePadding="50dip"
            android:paddingLeft="50dip"
            android:text="견과류"
            android:textSize="24sp" />

        <View
            android:id="@+id/r_line5"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="#808080" />


        <CheckBox
            android:id="@+id/ck_fruit"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:drawableLeft="@drawable/fish_custom"
            android:drawablePadding="50dip"
            android:paddingLeft="50dip"
            android:text="과일"
            android:textSize="24sp" />

        <View
            android:id="@+id/r_line6"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="#808080" />

        <CheckBox
            android:id="@+id/ch_fish"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:drawableLeft="@drawable/noodle_custom"
            android:drawablePadding="50dip"
            android:paddingLeft="50dip"
            android:text="어류"
            android:textSize="24sp" />


    </LinearLayout>






    <Button
        android:id="@+id/btn_allergy"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFC000"
        android:text="완료"
        android:textColor="#FFFFFF" />" />


</LinearLayout>