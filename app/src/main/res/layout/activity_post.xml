<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:src="@drawable/back_icon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="546dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/main_img"
            android:layout_width="match_parent"
            android:layout_height="239dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/post_profile"
                android:layout_width="50dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="158dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/post_username"
                        android:layout_width="71dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/namugodikl"
                        android:text="김OO" />

                    <TextView
                        android:id="@+id/post_usergender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/namugodikl"
                        android:text="성별란" />
                </LinearLayout>

                <TextView
                    android:id="@+id/post_introduce"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:fontFamily="@font/namugodikl"
                    android:text="자기소개란" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="129dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/post_ingre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&lt; 성분 &gt;" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/post_ingremarker"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/post_ingremarker2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/post_line1"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_margin="12dp"
            android:background="#808080" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="227dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/post_title"
                android:layout_width="217dp"
                android:layout_height="31dp"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/namugodikl"
                android:text="글 제목부" />

            <TextView
                android:id="@+id/post_contents"
                android:layout_width="match_parent"
                android:layout_height="176dp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/namugodikl"
                android:text="글 내용부" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/post_line"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_margin="12dp"
        android:background="#808080" />

    <LinearLayout
        android:layout_width="338dp"
        android:layout_height="84dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/post_seecomment"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/seecomment" />

        <ImageView
            android:id="@+id/post_route"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/route" />

        <ImageView
            android:id="@+id/post_commentwrite"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/comment_write" />
    </LinearLayout>

</LinearLayout>